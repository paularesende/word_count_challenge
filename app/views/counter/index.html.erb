<!DOCTYPE html>
<html>
  <header>WORD COUNTER</header>
  <body>
    <div id="form">
      <%= form_for(:text_body, id: "form", class: "topBefore", as: "post", url: counter_path) do |f| %>
        <%= f.text_area :text,
                        value: @text_body,
                        placeholder: 'PLACE YOUR TEXT HERE',
                        title: "Please, type something",
                        required: true %>
        <%= f.submit class: "submit", type: "submit", id: "submit", value: "GO!" %>
      <% end %>
    </div>

  <% flash.each do |type, msg| %>
    <div class="alert alert-info" id="feedback">
      <%= msg %>
    </div>
  <% end %>
  </body>
</html>
